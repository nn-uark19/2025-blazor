@* Event list component *@

@if (EventList != null && EventList.Count > 0)
{
    <ul>
        <Virtualize Items="EventList" Context="eventItem">
            <EventItemComponent Event="eventItem" />
        </Virtualize>
    </ul>
}

@code {
    [Parameter] public List<EventDto>? EventList { get; set; }
}
